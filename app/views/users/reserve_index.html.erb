
<div class="parent"> 
    <% @reserves. each do |reserve| %>
        <% post = Post.find_by(id: reserve.post_id) %>
        <% date_gap = reserve.end_date.to_date - reserve.start_date.to_date %>
        <div class= "child">
            <%= link_to("/posts/#{post.id}") do %>
                <table>
                    <tr> 
                        <th>ルーム画像</th><th>ルーム名</th><th>ルーム紹介</th><th>合計金額</th><th>開始日</th><th>終了日</th><th>予約確定日</th>
                    </tr>
                    <tr>
                        <th><img class="room-images2" src="<%= "/post_image/#{post.room_image}" %>"></th>
                        <th><%= post.room_name %></th><th> <%= post.room_introduction %></th>
                        <th>¥<%= reserve.number_of_people * post.price * date_gap.to_i %></th>
                        <th><%= reserve.start_date %></th>
                        <th><%= reserve.end_date %></th>
                        <th><%= reserve.created_at %></th>
                    </tr>
                </table>
            <% end %>
        </div>
    <% end %>
</div>