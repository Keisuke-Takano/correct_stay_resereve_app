<div class="col-lg-2 user-nav user-nav-mobile d-lg-none">
    <ul class="aaa">
        <li class=""><%= link_to("アカウント", "/users/account") %></li>
        <li class="active"><%= link_to("プロフィール", "/users/profile") %></li>
    </ul>
</div>

<div class="col-lg-10 user-view">
    <div class="user-view-box">

        <div class="update-content">
            <div class="row">
                <h5>プロフィール</h5>
            </div>
        </div>

        <div class="update-content">
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <div class="icon-box">
                        <img alt="アイコン画像" class="icon-image host-icon" src="<%= "/#{@current_user.image_name}" %>" >
                    </div> 
                </div>
            </div>
        </div>

        <%= form_tag("/users/update_2",{multipart: true}) do %>

            <div class="update-content">
                <div class="row">
                    <label class="col-md-3 required-a" >アイコン画像</label>
                    <input class="mb-4 col-md-9" type="file" name="image" id="user_image_name">
                </div>
            </div>

            <div class="update-content">
                <div class="row">
                    <label class="col-md-3 required-a" for="name">名前</label>
                    <input class="form-control mb-4 col-md-9" placeholder="名前を入力" type="text" value="<%= @current_user.name %>" name="name" id="user_name" />
                </div>
            </div>

            <div class="update-content">
                <div class="row">
                    <label class="col-md-3 required-a" for="introduction">自己紹介</label>
                    <textarea rows="5" class="form-control mb-4 col-md-9" placeholder="自己紹介を入力"  name="introduction" id="user_introduction"><%= @current_user.introduction %></textarea>
                </div>
            </div>

            <div class="update-content">
                <div class="row">
                    <input type="submit" value="更新" class="col-md-2 btn btn-primary mx-3" />
                </div>
            </div>
            
        <% end %>
    </div>
</div>
    
