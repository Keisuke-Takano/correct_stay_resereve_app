<div class="editer">
    <%= form_tag("/posts/#{@post.id}/update",{multipart: true}) do %>
        <div class="update-content">
            <div class="row">
                <label class="col-md-3 required-a" >ルーム画像</label>
                <input class="mb-4 col-md-9" type="file" name="image" id="user_image_name" />
            </div>

            <div class="row">
                <input type="submit" value="更新" class="col-md-2 btn btn-primary mx-3" />
            </div>
        </div>
    <% end %>
</div>